<div class="container">
  <h1>Products</h1>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="product_list">
        <%= render @products %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
</div>
