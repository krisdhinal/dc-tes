<div class="container">
  <h1>Product Details</h1>
  <p>
    <strong>Title:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
  <%= link_to 'Back', products_path, class: "btn btn-secondary" %>
</div>
